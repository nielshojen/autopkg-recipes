<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!-- Inspired by https://github.com/facebook/Recipes-for-AutoPkg -->
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads the latest Intellij disk image and imports into Munki.</string>
    <key>Identifier</key>
    <string>com.github.nielshojen.munki.IntelliJ-IDEA-Ultimate</string>
    <key>Input</key>
    <dict>
  		<key>MUNKI_REPO_SUBDIR</key>
  		<string>apps/JetBrains</string>
  		<key>NAME</key>
  		<string>IntelliJ-IDEA-Ultimate</string>
  		<key>pkginfo</key>
  		<dict>
  			<key>catalogs</key>
  			<array>
  				<string>testing</string>
  			</array>
  			<key>description</key>
  			<string>Lightweight IDE for Java SE, Groovy and Scala development.</string>
  			<key>display_name</key>
  			<string>IntelliJ IDEA Ultimate</string>
  			<key>name</key>
  			<string>%NAME%</string>
  			<key>unattended_install</key>
  			<true/>
  		</dict>
  	</dict>
    <key>MinimumVersion</key>
    <string>0.2.0</string>
    <key>ParentRecipe</key>
    <string>com.github.nielshojen.download.intellij</string>
    <key>Process</key>
    <array>
        <dict>
			<key>Processor</key>
			<string>AppDmgVersioner</string>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
				<string>%pathname%</string>
			</dict>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkg_path</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%_%version%.pkg</string>
				<key>app_path</key>
				<string>%pathname%/*.app</string>
			</dict>
			<key>Processor</key>
			<string>AppPkgCreator</string>
		</dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%pathname%</string>
                <key>repo_subdirectory</key>
                <string>%MUNKI_REPO_SUBDIR%</string>
            </dict>
            <key>Processor</key>
            <string>MunkiImporter</string>
        </dict>
    </array>
</dict>
</plist>
