<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the current release version of EIZO ColorManager, creates a fileset and imports into FIleWave.</string>
	<key>Identifier</key>
	<string>com.github.nielshojen.filewave.pkg.ColorNavigator</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>EIZO Color Navigator</string>
		<key>fw_app_bundle_id</key>
		<string>com.github.nielshojen.filewave.pkg.ColorNavigator</string>
	</dict>
	<key>ParentRecipe</key>
	<string>com.github.foigus.download.ColorNavigator</string>
	<key>MinimumVersion</key>
	<string>0.2.0</string>
	<key>Process</key>
	<array>
        	<dict>
            		<key>Processor</key>
            		<string>FlatPkgUnpacker</string>
            		<key>Arguments</key>
            		<dict>
                		<key>flat_pkg_path</key>
                		<string>%pathname%/*.pkg</string>
                		<key>destination_path</key>
                		<string>%RECIPE_CACHE_DIR%/unpack</string>
            		</dict>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pattern</key>
				<string>%RECIPE_CACHE_DIR%/unpack/*.pkg</string>
			</dict>
			<key>Processor</key>
			<string>FileFinder</string>
		</dict>
		<dict>
           		<key>Processor</key>
            		<string>PkgPayloadUnpacker</string>
            		<key>Arguments</key>
            		<dict>
                		<key>pkg_payload_path</key>
                		<string>%found_filename%/Payload</string>
                		<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/payload</string>
			</dict>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pattern</key>
				<string>%RECIPE_CACHE_DIR%/payload/Applications/*.app</string>
			</dict>
			<key>Processor</key>
			<string>FileFinder</string>
		</dict>
		<dict>
            		<key>Processor</key>
            		<string>Versioner</string>
            		<key>Arguments</key>
            		<dict>
                		<key>input_plist_path</key>
                		<string>%found_filename%/Contents/Info.plist</string>
			</dict>
            	</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pattern</key>
				<string>%pathname%/*.pkg</string>
			</dict>
			<key>Processor</key>
			<string>FileFinder</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/*.pkg</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/pkg/%NAME% %VERSION%.pkg</string>
			</dict>
			<key>Processor</key>
			<string>Copier</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>fw_app_bundle_id</key>
				<string>%fw_app_bundle_id%</string>
				<key>fw_app_version</key>
				<string>%version%</string>
				<key>fw_fileset_name</key>
				<string>%NAME% - %version%</string>
				<key>fw_import_source</key>
				<string>%RECIPE_CACHE_DIR%/pkg/%NAME% %VERSION%.pkg</string>
			</dict>
			<key>Processor</key>
			<string>com.github.autopkg.filewave.FWTool/FileWaveImporter</string>
		</dict>
        <dict>
        	<key>Processor</key>
        	<string>PathDeleter</string>
			<key>Arguments</key>
			<dict>
       		    <key>path_list</key>
        	    <array>
			<string>%RECIPE_CACHE_DIR%/downloads</string>
        	    </array>
        	</dict>
		</dict>
	</array>
</dict>
</plist>
