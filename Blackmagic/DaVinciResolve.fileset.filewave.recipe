<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads the most recent version of DaVinci Resolve, creates a fileset and imports into FileWave.</string>
    <key>Identifier</key>
    <string>com.github.nielshojen.filewave.fileset.davinciresolve</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>DaVinci Resolve</string>
	<key>fw_app_bundle_id</key>
	<string>com.github.nielshojen.filewave.fileset.davinciresolve</string>
    </dict>
    <key>MinimumVersion</key>
    <string>0.2.9</string>
    <key>ParentRecipe</key>
    <string>com.github.nielshojen.download.davinciresolve</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Processor</key>
            <string>Unarchiver</string>
            <key>Arguments</key>
            <dict>
                <key>archive_path</key>
                <string>%pathname%</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/unzip</string>
                <key>purge_destination</key>
                <true/>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>FileFinder</string>
            <key>Arguments</key>
            <dict>
                <key>pattern</key>
                <string>%RECIPE_CACHE_DIR%/unzip/*.dmg</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>FlatPkgUnpacker</string>
            <key>Arguments</key>
            <dict>
                <key>flat_pkg_path</key>
                <string>%found_filename%/*.pkg</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg/Manifest.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<false/>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg/ManifestPostgres.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<false/>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg/ManifestPanels.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<false/>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg/ManifestBlackMagicRawplayer.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<false/>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg/ManifestFairlightAudioAccelerator.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<false/>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg/ManifestFairlightPanels.pkg/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>Unarchiver</string>
            <key>Arguments</key>
            <dict>
                <key>archive_path</key>
                <string>%RECIPE_CACHE_DIR%/payload/Library/Application Support/Blackmagic Design/DaVinci Resolve/Prereqs/davinci_panels.tgz</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/unzip_panels</string>
                <key>purge_destination</key>
                <true/>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>FileFinder</string>
            <key>Arguments</key>
            <dict>
                <key>pattern</key>
                <string>%RECIPE_CACHE_DIR%/unzip_panels/*.pkg</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>FlatPkgUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<true/>
                <key>flat_pkg_path</key>
                <string>%found_filename%</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg_panels</string>
            </dict>
        </dict>
	<dict>
            <key>Processor</key>
            <string>PkgPayloadUnpacker</string>
            <key>Arguments</key>
            <dict>
	    	<key>purge_destination</key>
		<false/>
                <key>pkg_payload_path</key>
                <string>%RECIPE_CACHE_DIR%/distpkg_panels/Payload</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/payload</string>
            </dict>
        </dict>
	<dict>
        	<key>Processor</key>
        	<string>PathDeleter</string>
		<key>Arguments</key>
		<dict>
       		    <key>path_list</key>
        	    <array>
        	        <string>%RECIPE_CACHE_DIR%/payload/Applications/DaVinci Resolve/Uninstall Resolve.app</string>
        	    </array>
        	</dict>
	</dict>
	<dict>
		<key>Arguments</key>
		<dict>
			<key>fw_app_bundle_id</key>
			<string>%fw_app_bundle_id%</string>
			<key>fw_app_version</key>
			<string>%version%</string>
			<key>fw_destination_root</key>
			<string>/</string>
			<key>fw_fileset_name</key>
			<string>%NAME% - %version%</string>
			<key>fw_import_source</key>
			<string>%RECIPE_CACHE_DIR%/payload</string>
		</dict>
		<key>Processor</key>
		<string>com.github.autopkg.filewave.FWTool/FileWaveImporter</string>
	</dict>
        <dict>
        	<key>Processor</key>
        	<string>PathDeleter</string>
		<key>Arguments</key>
		<dict>
       		    <key>path_list</key>
        	    <array>
        	        <string>%RECIPE_CACHE_DIR%/payload</string>
        	        <string>%RECIPE_CACHE_DIR%/distpkg</string>
			<string>%RECIPE_CACHE_DIR%/unzip</string>
        	        <string>%RECIPE_CACHE_DIR%/distpkg_panels</string>
			<string>%RECIPE_CACHE_DIR%/unzip_panels</string>
        	    </array>
        	</dict>
	</dict>
    </array>
</dict>
</plist>
