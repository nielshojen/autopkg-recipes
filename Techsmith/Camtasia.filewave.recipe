<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the current release version of Camtasia and imports a fileset.</string>
	<key>Identifier</key>
	<string>com.github.nielshojen.filewave.Camtasia</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>Camtasia</string>
		<key>fw_app_bundle_id</key>
		<string>com.github.nielshojen.filewave.Camtasia</string>
	</dict>
	<key>ParentRecipe</key>
	<string>com.github.jps3.download.Camtasia</string>
	<key>MinimumVersion</key>
	<string>0.2.0</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Processor</key>
			<string>AppDmgVersioner</string>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
				<string>%pathname%</string>
			</dict>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkgdirs</key>
				<dict>
					<key>Applications</key>
					<string>0775</string>
					<key>/System</key>
					<string>0775</string>
					<key>/System/Library</key>
					<string>0775</string>
					<key>/System/Library/Extensions</key>
					<string>0775</string>
				</dict>
				<key>pkgroot</key>
				<string>%RECIPE_CACHE_DIR%/payload</string>
			</dict>
			<key>Processor</key>
			<string>PkgRootCreator</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%pkgroot%/Applications/%app_name%</string>
				<key>source_path</key>
				<string>%pathname%/%app_name%</string>
			</dict>
			<key>Processor</key>
			<string>Copier</string>
		</dict>
        	<dict>
            		<key>Processor</key>
            		<string>FlatPkgUnpacker</string>
            		<key>Arguments</key>
            		<dict>
                		<key>flat_pkg_path</key>
                		<string>%pkgroot%/Applications/%app_name%/Contents/Resources/TACC.pkg</string>
                		<key>destination_path</key>
                		<string>%RECIPE_CACHE_DIR%/unpack</string>
            		</dict>
		</dict>
		<dict>
           		<key>Processor</key>
            		<string>PkgPayloadUnpacker</string>
            		<key>Arguments</key>
            		<dict>
                		<key>pkg_payload_path</key>
                		<string>%RECIPE_CACHE_DIR%/unpack/techsmithsystemaudio.pkg/Payload</string>
                		<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/tmp</string>
			</dict>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%pkgroot%/System/Library/Extensions</string>
				<key>source_path</key>
				<string>RECIPE_CACHE_DIR%/tmp/TACC.kext</string>
			</dict>
			<key>Processor</key>
			<string>Copier</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>fw_app_bundle_id</key>
				<string>%bundleid%</string>
				<key>fw_app_version</key>
				<string>%version%</string>
				<key>fw_fileset_name</key>
				<string>%NAME% - %version%</string>
				<key>fw_import_source</key>
				<string>%pkgroot%</string>
				<key>fw_destination_root</key>
				<string>/</string>
			</dict>
			<key>Processor</key>
			<string>com.github.autopkg.filewave.FWTool/FileWaveImporter</string>
		</dict>
	</array>
</dict>
</plist>
